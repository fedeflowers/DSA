{
  "manifest_version": 3,
  "name": "LeetCode to GitHub Sync",
  "version": "1.0",
  "description": "Automatically syncs accepted LeetCode submissions to GitHub with LLM-generated explanations.",
  "permissions": [
    "storage",
    "webRequest",
    "scripting",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://api.github.com/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": ["src/content_script.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/injected_interceptor.js"],
      "matches": ["https://leetcode.com/*"]
    }
  ]
}
